
.index-container{
  width: 100%;
  display: flex;
  flex-direction: column;
}

.index-content{
  width: 100%;
  display: flex;
  flex-direction: column;
}

.sestion-content{
  width: 100%;
}

.select-region{
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-left: 40rpx;
  margin-bottom: 20rpx;
  font-size: 32rpx;
}

.select-region image{
  width: 60rpx;
  height: 60rpx;
}

.header{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 30rpx;
}

.header-content{
  width: 85%;
  display: flex;
  flex-direction: column;
  background: #3CC4A9;
  color: white;
  font-size: 30rpx;
  padding: 20rpx 20rpx;
  border-radius: 15rpx;
  box-shadow: 0rpx 0rpx 15rpx 6rpx gainsboro;
}

.logo-name{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
}

.body-content{
  width: 100%;
  display: flex;
  flex-direction: column;
}

.content{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 50rpx;
}

.content-item{
  width: 85%;
  padding: 20rpx 20rpx;
  border-radius: 15rpx;
  box-shadow: 0rpx 0rpx 15rpx 6rpx gainsboro;
  margin-bottom: 40rpx;
}

.item-header{
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-bottom-style:solid;
  border-width:1rpx;
  border-color: #F0F8FF;
}

.header-left{
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 35rpx;
}

.copy{
  font-size: 27rpx;
  margin-left: 20rpx;
}

.item-header image{
  width: 80rpx;
  height: 80rpx;
  margin-right: 15rpx;
}

.item-content{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.item-body{
  width: 85%;
  display: flex;
  flex-direction: column;
  padding-top: 10rpx;
}

.item-txt{
  font-size: 32rpx;
}

.location{
  display: flex;
  flex-direction: row;
  font-size: 27rpx;
  color: gray;
  align-items: center;
  padding-top: 5rpx;
}

.rq-code{
  width: 150rpx;
  height: 150rpx;
  border-radius: 10rpx;
}

.location image{
  width: 40rpx;
  height: 40rpx;
}
